        <div id="main-content">
            <div class="pin animated fadeIn"  ng-repeat="job in jobs|filter:query |orderBy:order | limitTo:num">
                <div class="box">
                    <a href="#" class="thumbnail">
                        <img src="{{job.pic}}" class="img-responsive">
                    </a>
                    <div class="caption">
                        <h3>{{job.title}}</h3>
                        <p>{{job.description}}</p>
                        <p>{{job.location}}</p>
                        <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


